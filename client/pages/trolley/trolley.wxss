/* pages/trolley/trolley.wxss */
.trolley-head {
  position: fixed;
  display: flex;
  top: 0;
  width: 100%;
  padding: 25rpx 19rpx;
  background: rgb(226, 225, 225);
}

.trolley-totalCheck {
  display: flex;
  flex-grow: 1;
}

.trolley-edit {
  text-align: right;
  padding-right: 50rpx;
}

.trolley-totalCheck-opr {
  width: 50rpx;
  height: 50rpx;
}

.trolley-totalCheck-img {
  width: 22rpx;
}

.trolley-list {
  margin-top: 100rpx;
}

.trolley-bottom {
  position: fixed;
  display: flex;
  bottom: 0;
  width: 100%;
  padding: 25rpx 19rpx;
  background: rgb(226, 225, 225);
}


.trolley-account {
  display: flex;
  padding: 0 20rpx;
}

.trolley-submit {
  padding-right: 50rpx;
}